<header id='header-bg'>
  <h1>Categories</h1>  
</header>

<div class='container'>
  <%= link_to 'New', new_category_path, class: 'btn btn-primary pull-right' %>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.desc %></td>
          <td>
            <%= link_to 'Show', category, class: 'btn-link' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn-link' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-link' %>
          </td>      
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
