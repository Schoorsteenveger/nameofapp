<header id='header-bg'>
  <h1>Category</h1>  
</header>

<div class='container'>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <p>
        <strong>Name:</strong>
        <%= @category.name %>
      </p>

      <p>
        <strong>Desc:</strong>
        <%= @category.desc %>
      </p>

      <h3> Products under this category </h3>
      <% Product.where(category_id: @category.id).each do |product| %>
      <li> <%= product.name %> </li>
      
      <% end %>

      <%= link_to 'Edit', edit_category_path(@category) %> |
      <%= link_to 'Back', categories_path %>
    </div>
  </div>
</div>
