<header id= "header-bg">
  <h1>Bikes</h1>
</header>

<div class= "clearfix container container-show">
  <div class= "row" id= "row-product">
    <div class=" col-md-6 col-md-offset-2 col-sm-8 col-xs-12">
      <p><%= notice %></p>       
        <% if @product.image_url %>
          <%= image_tag(@product.image_url, class: "img-responsive image-border thumbnail") %>
        <% end %>
    </div>

    <div class="col-md-4 col-md-push-1 col-sm-4 col-xs-12 column-right">
      <p>
        <strong>Colour:</strong>
          <%= @product.colour %>
      </p>
      <p>
        <strong>Price:</strong>
        â‚¬  <%= @product.price %>
      </p>
      <p>Average Rating:</p>
    </div>

    <div class="col-md-8 col-md-offset-1 col-sm-12 col-xs-12 column-description">
      <h2><%= @product.name %></h2>
      <p><%= @product.description %></p>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>
      <hr>
      <h2>Comments</h2>
      <p><%= @product.highest_rating_comment %></p>
    </div>
  </div><!--end row-->
  <div class="col-xs-12">
    <h3 id="previoush2"><%= link_to 'Previous', url_for(:back) %></h3>
  </div>    
</div>