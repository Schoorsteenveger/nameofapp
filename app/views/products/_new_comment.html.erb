<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-control", placeholder: "Comments" %>
    </p>
  </div>    
    <p>
      <%= f.label :rating %><br>
      <div class="rating"></div>
    </p>  
    <p>
      <%= f.submit "Submit", class: "btn btn-default" %>
    </p>
  <% end %>
<% end %>