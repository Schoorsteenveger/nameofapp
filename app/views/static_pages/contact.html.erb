<header class="header-contact main-header">
  <h1>Like to know more?</h1>
  <h2>Send us a message</h2>
  <container class= "container container-contact">
    <h1>Contact Us</h1>
    <row class="row">
      <div class="contact_form col-lg-5 col-lg-push-1 col-md-6 col-xs-12">
        <p>Happy Bikeshop Amsterdam</p>
        <p>Klaverstraat 225</p>
        <p>1034 BG</p>
        <p>Amsterdam</p>
        <br>
        <p>Mobile: +31641015726 </p>
      </div><!--contact column-->

      <%= flash[:notice] %>

      <%= form_tag("/static_pages/thank_you") do |form| %>
        <div class="row">
          <div class="contact_form col-lg-6 col-md-6 col-xs-12">
            <div class="form-group">
              <%= label_tag :name %>
              <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
            </div>

            <div class="form-group">
              <%= label_tag :email, "Email Address" %>
              <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
            </div>

            <div class="form-group">
              <%= label_tag :message %>
              <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message"%>
              <%= submit_tag "Send", class: "btn btn-info contact-button" %> 
            </div>           
          </div>          
      <% end %>
      </div><!--end row-->
  </container>
</header>
